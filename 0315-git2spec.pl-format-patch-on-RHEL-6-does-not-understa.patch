From 3b4bc498e16570623121fa43afdd7a8b5dc67150 Mon Sep 17 00:00:00 2001
From: Harald Hoyer <harald@redhat.com>
Date: Thu, 18 Jul 2013 13:38:29 +0200
Subject: [PATCH] git2spec.pl: format-patch on RHEL-6 does not understand
 --no-signature

---
 git2spec.pl | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/git2spec.pl b/git2spec.pl
index 9f12577..18d4b73 100755
--- a/git2spec.pl
+++ b/git2spec.pl
@@ -20,7 +20,7 @@ sub create_patches {
     my $tag=shift;
     my $pdir=shift;
     my $num=0;
-    open( GIT, 'git format-patch -M -N --no-signature -o "'.$pdir.'" '.$tag.' |');
+    open( GIT, 'git format-patch -M -N -o "'.$pdir.'" '.$tag.' |');
     @lines=<GIT>;
     close GIT;         # be done
     return @lines;
