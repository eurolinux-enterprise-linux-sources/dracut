From cfc02869e4ad43b74ba1fa50d2363ed30d244b22 Mon Sep 17 00:00:00 2001
From: Harald Hoyer <harald@redhat.com>
Date: Fri, 28 Feb 2014 09:27:53 +0100
Subject: [PATCH] base/init: create /dev/btrfs-control

This enables btrfs module auto loading.
---
 modules.d/99base/init | 2 ++
 1 file changed, 2 insertions(+)

diff --git a/modules.d/99base/init b/modules.d/99base/init
index b352b1f..1c7bbc7 100755
--- a/modules.d/99base/init
+++ b/modules.d/99base/init
@@ -108,6 +108,8 @@ mkdir /dev/pts
 mount -t devpts -o gid=5,mode=620 devpts /dev/pts >/dev/null 2>&1
 mount -t tmpfs tmpfs /dev/shm >/dev/null 2>&1
 
+mknod -m 0600 /dev/btrfs-control c 10 234
+
 UDEVVERSION=$(udevadm --version)
 
 source_conf /etc/conf.d
