From 2413fcbc608912c7a5bb29361a362a06a77a7d2a Mon Sep 17 00:00:00 2001
From: Harald Hoyer <harald@redhat.com>
Date: Tue, 27 May 2014 15:26:24 +0200
Subject: [PATCH] git2spec.pl: no signature

---
 git2spec.pl | 2 +-
 1 file changed, 1 insertion(+), 1 deletion(-)

diff --git a/git2spec.pl b/git2spec.pl
index 18d4b73..9f12577 100755
--- a/git2spec.pl
+++ b/git2spec.pl
@@ -20,7 +20,7 @@ sub create_patches {
     my $tag=shift;
     my $pdir=shift;
     my $num=0;
-    open( GIT, 'git format-patch -M -N -o "'.$pdir.'" '.$tag.' |');
+    open( GIT, 'git format-patch -M -N --no-signature -o "'.$pdir.'" '.$tag.' |');
     @lines=<GIT>;
     close GIT;         # be done
     return @lines;
